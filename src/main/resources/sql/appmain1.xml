<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="satelite.kr">

	<delete id="appmain1Delete"
		parameterType="String">
		delete from tbanner2
		where sn=#{sn} 
	</delete>

	<select id="selectAppMain1One"
		parameterType="String"
		resultType="main.java.admin.satelite.kr.AppMain1VO">
		SELECT sn,code2,imgfile,link,uname,umemo,type1,text1,text2,appkind,creatorimg from tbanner2
		where sn=#{sn} 
	</select>
	


	<insert id="insertAppMain1One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO">
		insert into tbanner2 (
		code2,imgfile,link,uname,umemo,type1,text1,text2,appkind,creatorimg )
		values ( #{code2}
		, #{imgfile} , #{link},#{uname},#{umemo},#{type1},#{text1},#{text2},#{appkind},#{creatorimg} )
	</insert>
	
	<insert id="insertAppMain2One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO">
		insert into tbanner2 (
		code2,imgfile,link,uname,umemo,type1,text1,text2,appkind,creatorimg )
		values ( '2'
		, concat('https://i.ytimg.com/vi/',#{link},'/default.jpg'), #{link},#{uname},#{umemo},#{type1},#{text1},#{text2},'2',#{creatorimg} )
	</insert>
	
	<update id="updateAppMain1One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO">
		update tbanner2 set
		link=#{link},uname=#{uname},umemo=#{umemo}
		,text1=#{text1},text2=#{text2},creatorimg=#{creatorimg}
		where sn=#{sn}
		
	</update>
	
	<update id="updateAppMain11One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO">
		update tbanner2 set
		link=#{link},uname=#{uname},umemo=#{umemo}
		,text1=#{text1},text2=#{text2}
		where sn=#{sn}
		
	</update>
	
	<update id="updateAppMain2One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO">
		update tbanner2 set
		link=#{link},uname=#{uname},umemo=#{umemo}
		,text1=#{text1},text2=#{text2},creatorimg=#{creatorimg}
		where sn=#{sn}
		
	</update>
	
	<update id="updateAppMain22One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO">
		update tbanner2 set
		link=#{link},uname=#{uname},umemo=#{umemo}
		,text1=#{text1},text2=#{text2}
		where sn=#{sn}
		
	</update>
	
	<select id="selectAppBanner2One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO"
		resultType="main.java.admin.satelite.kr.AppMain1VO">
		SELECT sn,code2,imgfile,link,uname,umemo,type1,text1,text2,appkind,creatorimg from tbanner2
		where sn=#{sn} 
	</select>

	<insert id="insertAppBanner2One"
		parameterType="main.java.admin.satelite.kr.AppMain1VO">
		insert into tbanner2 (
		code2,imgfile,link,uname,umemo,type1,text1,text2,appkindc,creatorimg )
		values ( #{code2}
		, #{imgfile} , #{link},#{uname},#{umemo},#{type1},#{text1},#{text2},#{appkind},#{creatorimg} )
	</insert>


	<sql id="includeAppMain1">
		WHERE appkind = '1'
		<if
			test="searchKeyword!=null and searchKeyword!='' and searchType!=''">
			<foreach item="item" index="index" collection="searchTypeArr"
				separator=" OR " open="AND (" close=")">
				${item} LIKE CONCAT('%',
				#{searchKeyword},'%' )
			</foreach>
		</if>

		<if test="orderKeyword=='1'">
			ORDER BY sn ASC
		</if>
		<if test="orderKeyword=='2'">
			ORDER BY sn DESC
		</if>
		<if test="orderKeyword=='' or orderKeyword==' '">
			ORDER BY sn ASC
		</if>


	</sql>
	
	<sql id="includeAppBanner2">
		WHERE appkind = '2'
		<if
			test="searchKeyword!=null and searchKeyword!='' and searchType!=''">
			<foreach item="item" index="index" collection="searchTypeArr"
				separator=" OR " open="AND (" close=")">
				${item} LIKE CONCAT('%',
				#{searchKeyword},'%' )
			</foreach>
		</if>

		<if test="orderKeyword=='1'">
			ORDER BY sn ASC
		</if>
		<if test="orderKeyword=='2'">
			ORDER BY sn DESC
		</if>
		<if test="orderKeyword=='' or orderKeyword==' '">
			ORDER BY sn ASC
		</if>


	</sql>


	<select id="selectAppMain1Count" resultType="Integer"
		parameterType="main.java.common.satelite.kr.SearchVO">
		SELECT COUNT(*) FROM tbanner2
		<include refid="includeAppMain1" />
	</select>

	<select id="selectAppMain1List"
		resultType="main.java.admin.satelite.kr.AppMain1VO"
		parameterType="main.java.common.satelite.kr.SearchVO">
		SELECT sn,code2,imgfile,link,uname,umemo,type1,text1,text2,appkind,creatorimg from tbanner2
		<include refid="includeAppMain1" />

		LIMIT ${rowStart-1}, 10
	</select>
	
	<select id="selectAppMain2Count" resultType="Integer"
		parameterType="main.java.common.satelite.kr.SearchVO">
		SELECT COUNT(*) FROM tbanner2
		<include refid="includeAppBanner2" />
	</select>

	<select id="selectAppMain2List"
		resultType="main.java.admin.satelite.kr.AppMain1VO"
		parameterType="main.java.common.satelite.kr.SearchVO">
		SELECT sn,code2,imgfile,link,uname,umemo,type1,text1,text2,appkind,creatorimg from tbanner2
		<include refid="includeAppBanner2" />

		LIMIT ${rowStart-1}, 10
	</select>
	
	

	

</mapper>

